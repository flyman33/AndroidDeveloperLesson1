<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/task1"
        android:layout_width="173dp"
        android:layout_height="85dp"
        android:onClick="goingToLesson1Part1CodingChallenge"
        android:text="@string/lesson1_1_coding_challenge"
        app:layout_constraintBottom_toTopOf="@+id/task2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <Button
        android:id="@+id/task2"
        android:layout_width="173dp"
        android:layout_height="85dp"
        android:onClick="goingToLesson1Part1Homework"
        android:text="@string/lesson1_1_homework"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <Button
        android:id="@+id/task"
        android:layout_width="173dp"
        android:layout_height="85dp"
        android:onClick="goingToTaskLesson1Part2CodingChallenge"
        android:text="@string/lesson1_2_coding_challenge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.335" />

    <Button
        android:id="@+id/task3"
        android:layout_width="173dp"
        android:layout_height="85dp"
        android:onClick="goingToTaskLesson1Part3CodingChallenge"
        android:text="@string/lesson1_3_coding_challenge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>